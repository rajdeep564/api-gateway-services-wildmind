# ============================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Core Configuration
# ============================================
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug

# ============================================
# Authentication & Security
# ============================================
# Cookie domain for local development (leave empty or use .localhost for local testing)
COOKIE_DOMAIN=
# Frontend origin for local development
FRONTEND_ORIGIN=http://localhost:3000
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# Whether to revoke Firebase refresh tokens on login
REVOKE_FIREBASE_TOKENS=false
# Whether to strictly check for token revocation on every request (slower but more secure)
AUTH_STRICT_REVOCATION=false

# ============================================
# Firebase Configuration (Required)
# ============================================
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
# Firebase Service Account JSON (stringified)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# ============================================
# Storage (Zata/S3)
# ============================================
ZATA_ENDPOINT=https://idr01.zata.ai
ZATA_BUCKET=your-bucket-name
ZATA_REGION=us-east-1
ZATA_ACCESS_KEY_ID=your-access-key-id
ZATA_SECRET_ACCESS_KEY=your-secret-access-key
ZATA_FORCE_PATH_STYLE=true
# Zata storage prefix URL (optional, has default)
ZATA_PREFIX=https://idr01.zata.ai/devstoragev1/

# ============================================
# Redis (Caching) - Optional for local dev
# ============================================
# Redis connection string (optional for local dev)
# REDIS_URL=redis://localhost:6379
REDIS_PREFIX=sess:app:
REDIS_DEBUG=true

# ============================================
# AI Services API Keys
# ============================================
BFL_API_KEY=your-bfl-api-key
FAL_KEY=your-fal-key
REPLICATE_API_KEY=your-replicate-api-key
GOOGLE_GENAI_API_KEY=your-google-genai-api-key
RUNWAY_API_KEY=your-runway-api-key
MINIMAX_API_KEY=your-minimax-api-key
MINIMAX_GROUP_ID=your-minimax-group-id

# ============================================
# API Base URLs (Optional - defaults provided)
# ============================================
# MINIMAX_API_BASE=https://api.minimax.io/v1
# RESEND_API_BASE=https://api.resend.com
# FAL_QUEUE_BASE=https://queue.fal.run
# FIREBASE_AUTH_API_BASE=https://identitytoolkit.googleapis.com/v1
# BFL_API_BASE=https://api.bfl.ai

# ============================================
# Email Configuration (SMTP)
# ============================================
# Gmail App Password (preferred)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-app-password

# OR Generic SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_FROM=noreply@yourdomain.com

# Resend.com (alternative email service)
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# Gmail SMTP Configuration (optional - defaults provided)
# GMAIL_SMTP_HOST=smtp.gmail.com
# GMAIL_SMTP_PORT=465

# Email sending behavior
OTP_EMAIL_AWAIT=false

# ============================================
# Frontend Domains (Optional - defaults provided)
# ============================================
# PRODUCTION_DOMAIN=https://wildmindai.com
# PRODUCTION_WWW_DOMAIN=https://www.wildmindai.com
# PRODUCTION_STUDIO_DOMAIN=https://studio.wildmindai.com

# ============================================
# Development URLs (Optional - defaults provided)
# ============================================
DEV_FRONTEND_URL=http://localhost:3000
DEV_CANVAS_URL=http://localhost:3001
DEV_BACKEND_URL=http://localhost:5001

# ============================================
# External Services (Optional)
# ============================================
# API Gateway URL (for CSP)
# API_GATEWAY_URL=http://localhost:5000

# Disposable email domains list URL
# DISPOSABLE_EMAIL_DOMAINS_URL=https://raw.githubusercontent.com/disposable/disposable-email-domains/master/domains.json

# ============================================
# Local Services (Optional)
# ============================================
# Local aesthetic scoring service URL
# SCORE_LOCAL=http://localhost:8000
# Prompt enhancer service URL
# PROMPT_ENHANCER_URL=http://localhost:8001

# ============================================
# BFL Polling Configuration (Optional)
# ============================================
# BFL_POLL_INTERVAL_MS=2000
# BFL_POLL_MAX_LOOPS=30

# ============================================
# Redeem Code Admin Key (Optional)
# ============================================
# REDEEM_CODE_ADMIN_KEY=your-admin-key

# ============================================
# Launch Plan Configuration (Optional)
# ============================================
# Launch plan cutoff date in ISO format (UTC)
# Users signing up on or before this date get LAUNCH_4000_FIXED plan
# Users signing up after this date get FREE plan
# Default: 2025-12-18T23:59:59.999Z
# LAUNCH_PLAN_CUTOFF_DATE=2025-12-18T23:59:59.999Z

# ============================================
# Debug Options
# ============================================
# Show OTP codes in response (for development only)
DEBUG_OTP=true

