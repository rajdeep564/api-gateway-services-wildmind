rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update, create: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.keys().hasOnly(['uid','email','username','photoURL','provider','createdAt','lastLoginAt']) &&
        request.resource.data.username.size() >= 3 && request.resource.data.username.size() <= 30 &&
        request.resource.data.username.matches('^[a-z0-9_.-]+$');
      allow delete: if false;
    }
  }
}


